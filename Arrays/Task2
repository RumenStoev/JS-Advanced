function solve(nums) {
  let result = "";
   
    for(let i= 0; i<= nums.length; i++) {
      if(i % 2 === 0) {
      result+= nums[i] + " ";
    }
    }
  return result.trim()
}

console.log(
  solve(['20','30','40'])
)

->20,40



function solve(nums) {
 return nums
           .filter((_,x) => x % 2 === 0)
           .join(" ")
}

console.log(
  solve(['20','30','40'])
)

->20,40
